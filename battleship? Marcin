def is_valid_operator(operator):  # W TEJ PĘTLI SPRAWDZAMY CZY WPROWADZONA
    if operator in ["1", "2", "3", "4"]:
        return True
    else:
        return False


def cls(n=0):
    if n == 0:
        os.system('cls')
    else:
        print('\b'*n)


def display(chars):
    s = '\n'.join(''.join(row) for row in chars)
    print(s)
    return len(s)


def display1(chars):
    os.system('cls')
    for row in chars:
        print(''.join(row))


def display2(chars):
    os.system('cls')
    print('\n'.join(''.join(row) for row in chars))


